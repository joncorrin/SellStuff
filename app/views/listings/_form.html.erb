
<%= form_for(@listing, html: { multipart: true }) do |f| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <%= f.text_field :name, id:"icon_prefix", class:"validate" %>
        <%= f.label :name %>
      </div>
    </div>

    <div class="row">
        <div class="input-field col s3">
          <i class="material-icons prefix">toll</i>
          <%= f.text_field :price, id:"icon_prefix", class:"validate" %>
          <%= f.label :price %>
        </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">description</i>
        <%= f.text_area :description, id:"icon_prefix", class:"materialize-textarea" %>
        <%= f.label :description %>
      </div>
    </div>

    <div class="row">
      <div class="col s6">
        <form action="#">
          <div class="file-field input-field">
            <div class="btn">
                <i class="material-icons right">file_upload</i>Image
              <input type="file" name="listing[image]" id="listing_image" multiple />
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="Upload one or more files">
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="row">
      <div class="col s6">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>

  </form>
</div>
<% end %>
