<%= form_for(listing) do |f| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <%= f.text_field :name, id:"icon_prefix", class:"validate" %>
        <%= f.label :name %>
      </div>
    </div>

    <div class="row">
        <div class="input-field col s3">
          <i class="material-icons prefix">toll</i>
          <%= f.text_field :price, id:"icon_prefix", class:"validate" %>
          <%= f.label :price %>
        </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">description</i>
        <%= f.text_area :description, id:"icon_prefix", class:"materialize-textarea" %>
        <%= f.label :description %>
      </div>
    </div>

    <div class="row">
      <div class="col s6">
        <label for="file-upload" class="btn waves-effect waves-light">Image
          <i class="material-icons right">file_upload</i>
        </label>
        <input id="file-upload" type="file" name="images"/>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>

  </form>
</div>
<% end %>
