<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col s12 m6">
    <div class="card large">
        <%= image_tag @listing.image_url %>
      </div>
    </div>
  <div class="col s12 m6">
    <h3><%= @listing.name %></h3>
    <p><%= number_to_currency(@listing.price) %>
    <p>Description: <%= @listing.description %></p>
    <br>
    <%= link_to "Buy It Now", new_listing_order_path(@listing), class:"btn waves-effect buttoncolor" %>
  </div>
</div>

<% if current_user == @listing.user %>
  <%= link_to 'Edit', edit_listing_path(@listing), class:"waves-effect waves-teal btn-flat" %> |
<% end %>
  <%= link_to 'Back', listings_path, class:"waves-effect waves-teal btn-flat" %>
